<% include ./partials/header %>

<h1 style="text-align: center">Sign Up</h1>
<div class="container">
  <form action="/user/register" method="post">
    <div class="form-group">
      <label for="username">User Name</label>
      <input class="form-control" type="text" name="username" autocomplete="off" required />
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input class="form-control" type="password" name="password" autocomplete="off" required />
    </div>
    <div class="form-group">
      <label for="firstName">First Name</label>
      <input class="form-control" type="text" name="firstName" autocomplete="off" required />
    </div>
    <div class="form-group">
      <label for="lastName">Last Name</label>
      <input class="form-control" type="text" name="lastName" autocomplete="off" />
    </div>
    <div class="form-group">
      <label for="username">Email</label>
      <input class="form-control" type="email" name="email" autocomplete="off" required />
    </div>
    <div class="form-group">
      <button class="btn btn-md btn-primary btn-block">Sign Up!</button>
    </div>
    <hr>
    <a href="/">Back</a>
    <hr>

  </form>

</div>

<% include ./partials/footer %>
